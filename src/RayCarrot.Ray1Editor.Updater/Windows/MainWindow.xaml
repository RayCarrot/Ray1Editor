<local:BaseWindow x:Class="RayCarrot.Ray1Editor.Updater.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:RayCarrot.Ray1Editor.Updater"
                  mc:Ignorable="d"
                  MinWidth="400"
                  MinHeight="300"
                  ShowCloseButton="False"
                  ShowMinButton="False"
                  Title="Ray1Editor - Updater" 
                  Height="450" Width="800"
                  ContentRendered="MainWindow_OnContentRenderedAsync"
                  Closing="MainWindow_OnClosing"
                  d:DataContext="{d:DesignInstance local:UpdaterViewModel}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Text="{Binding Path=Log}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"/>

        <ProgressBar Grid.Row="1"
                     Margin="0 10"
                     Maximum="{Binding Path=TotalBytes}"
                     Value="{Binding Path=ReceivedBytes}" />

        <Button Grid.Row="2"
                Content="Cancel"
                IsEnabled="{Binding Path=CanCancel}"
                Click="CancelButton_OnClick"/>
    </Grid>
</local:BaseWindow>